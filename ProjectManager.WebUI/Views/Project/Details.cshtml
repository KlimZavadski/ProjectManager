@model ProjectManager.WebUI.Models.ViewModels.ProjectViewModel
@{
    ViewBag.Title = "Details";
}
@Html.HiddenFor(model => model.ProjectId)
<div class="ourDiv">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.ProjectId)
        @Html.DisplayForModel()
    }
    @using (Html.BeginForm())
    {
        <p style="margin-left: 2em;" align="left" class="actionButtons">
            <img src="../../Content/addnewprop.png" id="property-addnew2" />
        </p>
        <p class="actionButtons" align="right" style="margin-right: 2em;">
            <a href="@Url.Action("Delete", "Project", new { id = Model.ProjectId })">Delete</a>
            <a style="" href="@Url.Action("BackToUrl", "Project")">Back to projects</a>
        </p>
    }
</div>
@*<p align="center" class="actionButtons">
    <a id="property-addnew1">Add new property</a>*@ </p>
<div id="loading-content" style="display: none;">
    Loading data
</div>
<div id="dialog-addnew">
    <h3 id="form-header">
        Add new property</h3>
    <div id="add_new_dialog_body">
        <p>
            <label>
                New property name</label>
            <input type="text" id="property_name" />
        </p>
        <p>
            <label>
                Is public</label>
            <input type="checkbox" id="ispublic" />
            <div id="radios">
                <p>
                    <input type="radio" name="radio1" value="Number" />
                    <label>
                        Number</label>
                </p>
                <p>
                    <input type="radio" name="radio1" value="Bool" />
                    <label>
                        Bool</label>
                </p>
                <p>
                    <input type="radio" name="radio1" value="DateTime" />
                    <label>
                        Date</label>
                </p>
                <p>
                    <input type="radio" name="radio1" value="String" />
                    <label>
                        String</label>
                </p>
            </div>
        </p>
        <div id="defvalueslabel">
            <p>
                <label>
                    Default values</label>
            </p>
        </div>
        <div id="values">
        </div>
        <div id="morelessbuttons">
            <input type="button" id="more" value="More" />
            <input type="button" id="less" value="Less" />
        </div>
    </div>
</div>
<div id="dialog-edit">
    <h3 id="form-header1">
        Edit property</h3>
    <div id="values-edit">
    </div>
    <div id="testhere">
    </div>
    <div id="morelessbuttons1">
        <input type="button" id="more1" value="More" />
        <input type="button" id="less1" value="Less" />
    </div>
</div>
<div id="dialog-history">
    <h3 id="form-header2">
        History</h3>
    <div id="historyvalues">
    </div>
</div>
<script src="../../Scripts/FunctionalityDetails.js" type="text/javascript"></script>
<script src="../../Scripts/AddNewProperty.js" type="text/javascript"></script>
<script src="../../Scripts/EditPropertyNew.js" type="text/javascript"></script>
<script src="../../Scripts/PropertyHistory.js" type="text/javascript"></script>
