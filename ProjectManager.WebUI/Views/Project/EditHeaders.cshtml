@model ProjectManager.WebUI.Models.DisplayedFieldViewModel
@{
    ViewBag.Title = "Edit Displayed Field";
}
<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<h2>Edit Displayed Field</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    for (int i = 0; i < Model.PropertiesList.Count; i++)
    {
        <p>
        @((i + 1).ToString() + " Column  ")        
        @Html.DropDownListFor(x => x.PropertiesList[i], Model.ColumnsList, Model.PropertiesList[i])
        <br />
        </p>
    }
    <input class="actionButtons" type="submit" value="Save" />
    <p align="left" class="actionButtons">
        <a href="@Url.Action("BackToUrl", "Project", new { returnUrl = Request.Url.PathAndQuery })">Back to List</a>
    </p>
}

